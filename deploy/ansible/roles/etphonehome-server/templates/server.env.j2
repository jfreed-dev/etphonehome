# Reach Server Environment
# Managed by Ansible

# Server bind address
REACH_HOST={{ reach_http_host }}
REACH_PORT={{ reach_http_port }}

# API key for authentication
{% if reach_api_key is defined and reach_api_key %}
REACH_API_KEY={{ reach_api_key }}
{% endif %}

# Logging
REACH_LOG_LEVEL={{ reach_log_level }}
REACH_LOG_FILE={{ reach_log_dir }}/server.log
REACH_LOG_MAX_BYTES={{ reach_log_max_bytes }}
REACH_LOG_BACKUP_COUNT={{ reach_log_backup_count }}
