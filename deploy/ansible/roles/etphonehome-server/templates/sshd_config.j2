# Reach SSH Configuration
# Managed by Ansible

# Listen on dedicated port for reach clients
Port {{ reach_ssh_port }}
ListenAddress {{ reach_ssh_listen_address }}

# Only allow reach user
Match User {{ reach_user }}
    # Allow reverse port forwarding only
    AllowTcpForwarding remote
    GatewayPorts no
    X11Forwarding no
    PermitTunnel no
    ForceCommand /bin/false
    # Disable shell access
    PermitTTY no
