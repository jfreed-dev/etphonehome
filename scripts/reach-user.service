[Unit]
Description=Reach Client
Documentation=https://github.com/jfreed-dev/reach
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=%h/.local/share/reach/run.sh
Restart=always
RestartSec=10
# Set REACH_UPDATE_URL to enable auto-updates, e.g.:
# Environment=REACH_UPDATE_URL=http://your-server/latest/version.json

[Install]
WantedBy=default.target
