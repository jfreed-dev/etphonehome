[Unit]
Description=ET Phone Home Client
Documentation=https://github.com/jfreed-dev/etphonehome
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=%h/.local/share/phonehome/run.sh
Restart=always
RestartSec=10
# Set PHONEHOME_UPDATE_URL to enable auto-updates, e.g.:
# Environment=PHONEHOME_UPDATE_URL=http://your-server/latest/version.json

[Install]
WantedBy=default.target
